@using Microsoft.AspNetCore.Components.Authorization

<AuthorizeView>
    <Authorized>
        <text>Hello, @context.User.FindFirst("userDisplayName")?.Value</text>
        <a href="/user/logout">Logout</a>

    </Authorized>
    <NotAuthorized>
        @*<a href="/user/register">Register</a>*@
        <a href="/user/login">Log in</a>
    </NotAuthorized>
</AuthorizeView>
